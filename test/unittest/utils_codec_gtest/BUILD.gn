import("//build/test.gni")
SOURCE_DIR = "../../../"

ohos_unittest("utils_codec_gtest") {
  install_enable = true
  subsystem_name = "telephony"
  part_name = "core_service"
  test_module = "core_service"
  module_out_path = part_name + "/" + test_module
  source_target = [
    "$SOURCE_DIR/utils/codec/src/asn1_builder.cpp",
    "$SOURCE_DIR/utils/codec/src/asn1_decoder.cpp",
    "$SOURCE_DIR/utils/codec/src/asn1_node.cpp",
    "$SOURCE_DIR/utils/codec/src/asn1_utils.cpp",
    "$SOURCE_DIR/utils/codec/src/request_apdu_build.cpp",
    "$SOURCE_DIR/utils/codec/src/reset_response.cpp",
  ]
  sources = source_target + [
    "asn1_builder_test.cpp",
    "asn1_decoder_test.cpp",
    "asn1_node_test.cpp",
    "asn1_utils_test.cpp",
    "request_apdu_build_test.cpp",
    "reset_reponse_test.cpp",
  ]

  include_dirs = [
    "$SOURCE_DIR/utils/codec/include",
    "$SOURCE_DIR/utils/log/include",
  ]

  deps = [ "$SOURCE_DIR/interfaces/innerkits:tel_core_service_api" ]

  external_deps = [
    "c_utils:utils",
    "googletest:gtest_main",
    "hilog:libhilog",
  ]

  defines = [
    "TELEPHONY_LOG_TAG = \"CoreServiceGtest\"",
    "LOG_DOMAIN = 0xD000F00",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":utils_codec_gtest" ]
}
